                    "LOCALITY_NAME": "Argenteuil",
                    "ORGANIZATION_NAME": "smartius",
                    "COMMON_NAME": "root-ca"
                },
                "extensions": {
                    "SubjectAlternativeName": {
                        "items": [
                            {
                                "DNSName": "localhost"
                            },
                            {
                                "DNSName": "dev.local"
